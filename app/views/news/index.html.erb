<div id='news'>
  <h1 class='titles'>NEWS</h1>
    <% @news.each do |news| %>
      <div class='row'>
        <div class="news-<%= news['id'] %>">
          <div class='large-6 columns'>
            <div class='news-image'>
              <%= image_tag news['file'], style: 'width: 300px; height: auto' %>
            </div>
          </div>
          <div class='news-title'>
            <%= link_to news['title'], news_path(news['id'])%>
          </div>
          <div class='news-content'>
            <% if news['content'].length > 200 %>
              <%= truncate(news['content'], length: 200, :escape => false).html_safe %>
            <% else %>
              <%= news['content'].html_safe %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>
